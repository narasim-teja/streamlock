# Aptos Configuration
NEXT_PUBLIC_APTOS_NETWORK=testnet
NEXT_PUBLIC_CONTRACT_ADDRESS=0x...

# Private key for server-side operations (optional, for gas sponsoring)
APTOS_PRIVATE_KEY=

# Storage Configuration
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=./storage
LOCAL_STORAGE_URL=http://localhost:3000/storage

# S3/R2 Configuration (if STORAGE_PROVIDER=s3)
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_PUBLIC_URL=

# Database
DATABASE_URL=file:./db.sqlite

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_KEY_SERVER_URL=http://localhost:3000/api

# Encryption (for encrypting master secrets at rest)
ENCRYPTION_KEY=your-32-byte-hex-key-here-000000
