# Aptos Configuration
NEXT_PUBLIC_APTOS_NETWORK=testnet
NEXT_PUBLIC_CONTRACT_ADDRESS=0x7078b3f2bc8d45fd3f636aa044bf1ef9b69c98488a2889bf723c8bb10622395e

# Private key for server-side operations (optional, for gas sponsoring)
APTOS_PRIVATE_KEY=

# ===========================================
# Supabase Configuration (PostgreSQL + Storage)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (Supabase PostgreSQL connection string)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres

# Storage Configuration
# Options: 'supabase' (recommended for production) or 'local' (for development)
STORAGE_PROVIDER=supabase
SUPABASE_STORAGE_BUCKET=videos

# ===========================================
# Local Development (alternative to Supabase)
# ===========================================
# STORAGE_PROVIDER=local
# LOCAL_STORAGE_PATH=./storage
# LOCAL_STORAGE_URL=http://localhost:3000/storage
# DATABASE_URL=postgresql://localhost:5432/streamlock

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_KEY_SERVER_URL=http://localhost:3000/api

# Encryption (for encrypting master secrets at rest)
ENCRYPTION_KEY=your-32-byte-hex-key-here-000000
